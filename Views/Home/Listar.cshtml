@model List<Producto>


<h1>Lista de regiones</h1>

<table class="table border">
    <tr>
        <th>Id</th>
        <th>Nombre</th>
        <th>Precio</th>
        <th>Descripcion</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Nombre</td>
            <td>
                @foreach (var p in Model) {
        <li class="d-flex">
            <div><img src="@p.Foto" /></div>
            <div>@p.Nombre</div>
        </li>
    }
            </td>
        </tr>
    }
    @if (Model.Count == 0) {
        <tr>
            <td colspan="4" class="text-center">No se encontraron productos</td>
        </tr>
    }
</table>

